@model AttendanceApplication.Models.AttendanceRegisters

@{
    ViewData["Title"] = "Attendee";
}

    <h1>Register Attendee</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Attendee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="registerId" class="control-label"></label>
                <input asp-for="registerId" class="form-control" />
                <span asp-validation-for="registerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="attSchemeId" class="control-label"></label>
                <input asp-for="attSchemeId" class="form-control" />
                <span asp-validation-for="attSchemeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewSchema">Back to events</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
